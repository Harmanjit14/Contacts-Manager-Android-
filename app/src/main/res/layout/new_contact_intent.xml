<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:id="@+id/base"
    android:padding="10sp"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="Enter details"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:id="@+id/det"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/det"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:text="Enter name"
        android:textAllCaps="true"
        android:textSize="18dp"></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/det"
        android:id="@+id/name_in"
        android:layout_alignRight="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/name"
        android:padding="10dp"
        android:text=""
        android:textAllCaps="true"
        android:textSize="18dp"></EditText>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:id="@+id/phone_text"
        android:layout_alignParentLeft="true"
        android:text="enter phone no."
        android:textAllCaps="true"
        android:padding="10dp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/phone_text"
        android:layout_below="@+id/name_in"
        android:id="@+id/phone_in"></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phone_in"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="add"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textStyle="bold"></Button>
</RelativeLayout>